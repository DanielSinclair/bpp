{
  "name": "@plasmo/bpp",
  "version": "2.5.0",
  "private": true,
  "description": "Browser Platform Publisher",
  "main": "lib/main.js",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:build": "esbuild src/main.ts --sourcemap --bundle --watch --platform=node --outfile=dist/index.js",
    "dev:test": "jest --watch",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "package": "esbuild src/main.ts --platform=node --minify --bundle --outfile=dist/index.js",
    "test": "jest",
    "all": "run-s format package test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plasmohq/bpp.git"
  },
  "keywords": [
    "browser-extensions",
    "chrome",
    "firefox",
    "safari",
    "actions"
  ],
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.8.2",
    "@plasmohq/bms": "1.14.0"
  },
  "devDependencies": {
    "@jest/globals": "28.1.0",
    "@plasmohq/rps": "1.3.3",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/node": "17.0.34",
    "esbuild": "0.14.39",
    "jest": "28.1.0",
    "js-yaml": "4.1.0",
    "prettier": "2.6.2",
    "ts-jest": "28.0.2",
    "typescript": "4.6.4"
  }
}
